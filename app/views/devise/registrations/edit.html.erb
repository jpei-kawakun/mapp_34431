<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :メール %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :パスワード %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認用 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :現在のパスワード %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :性別 %><br />
    <%= f.radio_button :gender, :man, class: "form-check-input" %>
            <label class="form-check-label">男性</label> 
    <%= f.radio_button :gender, :woman, class: "form-check-input" %>
            <label class="form-check-label">女性</label>
  </div>

  <div class="field">
    <%= f.label :生年月日 %><br />
    <%= f.date_select :birth_day, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :趣味 %><br />
    <%= f.text_field :hobby, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :自己紹介 %><br />
    <%= f.text_area :self_introduction, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :プロフィール写真 %><br />
    <%= f.file_field :image %>
  </div>
  

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<h3>アカウント削除</h3>

<p><%= button_to "削除", registration_path(resource_name), data: { confirm: "本当に消去しますか?" }, method: :delete %></p>

<%= link_to "戻る", :back %>
