<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>User Details</h2>
      <% if user_signed_in? && current_user.id == @user.id %>
       <%= link_to "Edit", edit_user_registration_path, class: 'btn'%>
      <% end %>
       <%= link_to "Top", root_path, class: 'btn' %>
       <%= link_to "Message", new_room_path, class: 'btn' %>
    </div>
    <div class='account-page__inner--right user-form'>
        <div class='field'>
          <div class='field-label'>
            <h3>Name</h3>
              <%= @user.name %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <h3>Email</h3>
             <%= @user.email %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <h3>Birthday</h3>
            <%= @user.birth_day %>
          </div>
          <div class='field-label'>
            <h3>Hobby</h3>
            <%= @user.hobby %>
          </div>
          <div class='field-label'>
            <h3>Profile</h3>
             <%= @user.self_introduction %> 
          </div>
          <div class='field-label'>
            <h3>Icon</h3>
              <% if @user.image.attached? %>
                 <%= image_tag @user.image, class: "user-img" %>
              <% end %>
          </div>
      </div>
  </div>
  <%= render "relationships/follow_button"%>
</div>





